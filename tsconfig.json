{
	"compilerOptions": {
		"paths": {
			"@/*": ["./src/*"]
		},
		"verbatimModuleSyntax": false,
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"noEmit": true,
		"incremental": true,
		"module": "esnext",
		"esModuleInterop": true,
		// "moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"plugins": [
			{
				"name": "next"
			}
		],
		"moduleResolution": "bundler"
	},
	"include": ["next-env.d.ts", ".next/types/**/*.ts", ".next/dev/types/**/*.ts", "**/*.mts", "**/*.ts", "**/*.tsx", "src/app/layout.tsx", "src/app/page.tsx", "src/app/productos/page.tsx", "global.d.ts"],
	"exclude": ["node_modules"]
}
